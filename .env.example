# ============================================
# SUIDEX GAMES - Environment Variables
# ============================================
# Copy this file to .env.local and fill in values

# --------------------------------------------
# Database (MongoDB Atlas)
# --------------------------------------------
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/suidex_games?retryWrites=true&w=majority

# Main SuiDex DB (Read-only access for staking data)
MAIN_SUIDEX_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/suidex_main?retryWrites=true&w=majority

# --------------------------------------------
# SUI Blockchain
# --------------------------------------------
# Network: "testnet" or "mainnet" (controls RPC, wallet, explorer URLs)
NEXT_PUBLIC_SUI_NETWORK=testnet

# Admin wallet that receives spin purchase payments
ADMIN_WALLET_ADDRESS=0x...

# --------------------------------------------
# Authentication - JWT Secrets
# --------------------------------------------
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-refresh-token-secret-min-32-chars
REFRESH_TOKEN_EXPIRES_IN=7d

# Admin session secret (separate from user auth)
ADMIN_SESSION_SECRET=your-admin-session-secret-min-32-chars
ADMIN_SESSION_EXPIRES_IN=24h

# --------------------------------------------
# Application URLs
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAIN_DEX_URL=https://suidex.org

# --------------------------------------------
# Feature Flags (for development)
# --------------------------------------------
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_DEVTOOLS=false

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------
# PWA Push Notifications (VAPID)
# --------------------------------------------
# Generate with: npx web-push generate-vapid-keys
# Required for PWA push notifications (prize distribution alerts, etc.)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:support@yourdomain.com
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
